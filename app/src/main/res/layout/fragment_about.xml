<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/bk_secondBackground"
    android:clipToPadding="false"
    android:paddingTop="50dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="30dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/logo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/app_name"
                android:textColor="?attr/bk_textColor"
                android:textSize="@dimen/text_giant" />


        </LinearLayout>

        <TextView
            android:id="@+id/fragment_about_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="?attr/bk_text_hint"
            android:text="نسخه 2.0.1"
            android:textColor="?attr/bk_toolbarSecond"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />


        <TextView
            android:id="@+id/fragment_about_team"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="?attr/bk_text_hint_second"
            android:gravity="center"
            android:maxWidth="320dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:text="برنامه نویسان:\n سینا دالوند \n علی عسکری \n \n تحلیل: \n زهرا منصوری\n دانیال رومیانی \n \n طراحی: \n سید علی شاهرخی"
            android:textColor="@color/dark_deactiveTextColor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fragment_about_version"
            app:layout_constraintWidth_percent="0.7" />


        <androidx.appcompat.widget.AppCompatImageView
            android:visibility="invisible"
            android:layout_marginTop="30dp"
            android:id="@+id/appCompatImageView"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintEnd_toStartOf="@+id/appCompatImageView2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fragment_about_team"
            app:srcCompat="@drawable/ic_git"
            app:tint="?attr/bk_textColor" />

        <androidx.appcompat.widget.AppCompatImageView
            android:visibility="invisible"
            android:layout_marginTop="30dp"
            android:id="@+id/appCompatImageView2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/appCompatImageView"
            app:layout_constraintTop_toBottomOf="@+id/fragment_about_team"
            app:srcCompat="@drawable/ic_telegram"
            app:tint="?attr/bk_textColor" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>